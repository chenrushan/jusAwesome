URxvt.saveLines:            10000
URxvt.internalBorder:       3
URxvt.lineSpace:            0
URxvt.cursorBlink:          false
URxvt.scrollBar:            false
URxvt.urlLauncher:          chromium

urxvt*internalBorder:       0
urxvt*externalBorder:       0

! urxvt clipboard
URxvt.perl-ext-common:      selection-to-clipboard
 
! enable real transparency
URxvt.depth:                32
URxvt*foreground:           White
!gray theme color
!URxvt.background:           rgba:2222/2222/2222/eeee

!green theme color
URxvt.background:           rgba:1111/4444/3333/cccc
URxvt.transparent:          false

! fonts
URxvt.allow_bold:           false
URxvt*font:                 xft:Monaco for Powerline:regular:size=10,xft:AR PL UKai CN:regular:size=11
URxvt*imFont:               xft:Monaco for Powerline:regular:size=10,xft:AR PL UKai CN:regular:size=11
URxvt*boldFont:             xft:Monaco for Powerline:bold:size=10,xft:AR PL UKai CN:bold:size=11
URxvt*italicFont:           xft:Monaco for Powerline:italic:size=10,xft:AR PL UKai CN:italic:size=11
! Consolas font is great for bold and italic style
URxvt*boldItalicFont:       xft:Consolas:bold:italic:size=10,xft:AR PL UKai CN:bold:italic:size=11
URxvt*letterSpace:          -1

! URxvt color configuration
! black
*color0:                    #2E3436
*color8:                    #555753
! red
*color1:                    #a40000
*color9:                    #EF2929
! green
*color2:                    #4E9A06
*color10:                   #8AE234
! yellow
*color3:                    #C4A000
*color11:                   #FCE94F
! blue
*color4:                    #3465A4
*color12:                   #729FCF
! purple
*color5:                    #75507B
*color13:                   #AD7FA8
! orange
*color6:                    #ce5c00
*color14:                   #fcaf3e
! white
*color7:                    #babdb9
*color15:                   #EEEEEC
